<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Question 1</th>
      <th>Question 2</th>
      <th>Question 3</th>
      <th>Question 4</th>
      <th>Question 5</th>
      <th>Question 6</th>
      <th>Question 7</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.title %></td>
        <td><%= answer.question_1 %></td>
        <td><%= answer.question_2 %></td>
        <td><%= answer.question_3 %></td>
        <td><%= answer.question_4 %></td>
        <td><%= answer.question_5 %></td>
        <td><%= answer.question_6 %></td>
        <td><%= answer.question_7 %></td>
        <td><%= answer.status %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
